{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "module": "commonjs",
        "jsx": "react",
        "noUnusedLocals": true,
        "checkJs": false,
        "baseUrl": "./src/",
        "experimentalDecorators": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "tags": [
                    "transition",
                    "styled",
                    "media",
                    "css"
                ]
            }
        ],
    },
    "exclude": [
        "node_modules/**/*",
        "~/.cache/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
